# Database Configuration
POSTGRES_USER=restaurant_admin
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=restaurant_db
DATABASE_URL=postgresql://restaurant_admin:your_secure_password@localhost:5432/restaurant_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Service Ports
AUTH_SERVICE_PORT=8001
MASTER_ADMIN_SERVICE_PORT=8002
RESTAURANT_SERVICE_PORT=8003
ORDER_SERVICE_PORT=8004
KITCHEN_SERVICE_PORT=8005
NOTIFICATION_SERVICE_PORT=8006
API_GATEWAY_PORT=8000

# Frontend
FRONTEND_PORT=3000
VITE_API_BASE_URL=http://localhost:8000

# New Relic Configuration
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=Restaurant-Management-System

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Environment
ENVIRONMENT=development

# File Upload
MAX_UPLOAD_SIZE=5242880  # 5MB
UPLOAD_DIR=/tmp/uploads

# QR Code Configuration
QR_CODE_BASE_URL=http://localhost:3000/table
QR_CODE_SIZE=300
QR_CODE_ERROR_CORRECTION=M

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Session
SESSION_SECRET=your-session-secret-key
SESSION_EXPIRE_HOURS=24
